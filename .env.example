# pgschema Demo Environment Variables
# Copy this file to .env and adjust values as needed

# PostgreSQL Connection Settings
PGHOST=localhost
PGPORT=5432
PGDATABASE=demo
PGUSER=demo
PGPASSWORD=demo

# Optional: Application name for connection tracking
PGAPPNAME=pgschema-demo

# Demo Configuration
DEMO_PAUSE_DURATION=2
DEMO_SHOW_COMMANDS=true
DEMO_AUTO_CONTINUE=false

# GitHub Actions (for CI/CD demo)
# These are set automatically in GitHub Actions
# GITHUB_TOKEN=your_github_token
# GITHUB_REPOSITORY=your_username/pgschema-demo